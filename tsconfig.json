{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./app/javascript"
  },
  "include": [
    "app/javascript/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "public",
    "vendor"
  ],
  "compileOnSave": false
}
